.row
  .col-xs-12
    .media
      = link_to @user, class: 'pull-left' do
        = @user.avatar_file_name.nil? ? image_tag('holder.js/200x200') : image_tag(@user.avatar.url(:medium), class: 'media-object')
      .media-body
        %h4.media-heading= user_name @user
        = h @user.description
.row
  .col-xs-12
    %h2=user_name @user
    .panel.panel-default
      .panel-heading Questions
      .panel-body
        - if @user.questions.any?
          %p This user has been very busy indeed...
        - else
          %p This user is enlightened. No questions here!
      %table.table.table-condensed
        %tr
          %th #
          %th Question
          %th Date
        - @user.questions.each do |question|
          %tr
            %td= question.id
            %td= link_to question.title, question
            %td= question.created_at.strftime("%B %d, %Y")